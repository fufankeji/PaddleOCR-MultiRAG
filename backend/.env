# 阿里云百炼平台配置
DASHSCOPE_API_KEY=sk-xxx
QWEN_MODEL_NAME=qwen-max  # 或 qwen-plus, qwen-turbo

# 向量数据库配置
CHROMA_PERSIST_DIR=./data/chroma_db
EMBEDDING_MODEL=text-embedding-v3  # Qwen embedding 模型（支持中英文）

# PaddleOCR 模型路径
PADDLEOCR_VL_MODEL_DIR=../model/PaddleOCR-VL-0.9B
LAYOUT_DETECTION_MODEL_DIR=../model/PP-DocLayoutV2

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=50  # MB
# ALLOWED_EXTENSIONS 使用代码中的默认值

# 服务器配置
HOST=0.0.0.0
PORT=8100
# CORS_ORIGINS 使用代码中的默认值

# 日志配置
LOG_LEVEL=INFO
